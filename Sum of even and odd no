//sum of even and odd number
#include <stdio.h>
#include<math.h>
int even(int a){
    int i,e=0;
    for(i=0;i<=a;i++){
        if(i%2==0){
            e += i;
        }
    }
    printf("%d",e);
}
int odd(int a){
    int i,o=0;
    for(i=0;i<=a;i++){
        if(i%2!=0){
            o +=i;
        }
    }
    printf("%d",o);
}
int main()
{
    
    int a,k;
    scanf("%d",&a);
    printf("the sum of even numbers are:");
    even(a);
    printf("\n");
    printf("the sum of odd numbers are:");
    odd(a);
    return 0;
}
